<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Transition
        app:constraintSetEnd="@id/open"
        app:constraintSetStart="@id/closed"
        app:duration="400">


        <KeyFrameSet>

            <KeyAttribute
                android:scaleX="0.7"
                android:scaleY="1"
                app:framePosition="80"
                app:target="@id/menu1" />

            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                app:framePosition="100"
                app:target="@id/menu1" />

            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:percentY="-0.2"
                app:target="@id/menu1" />
        </KeyFrameSet>


        <KeyFrameSet>

            <KeyAttribute
                android:scaleX="0.7"
                android:scaleY="1"
                app:framePosition="80"
                app:target="@id/menu2" />

            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                app:framePosition="100"
                app:target="@id/menu2" />

            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:percentY="-0.2"
                app:target="@id/menu2" />
        </KeyFrameSet>

        <KeyFrameSet>


            <KeyAttribute app:framePosition="10"
                app:target="@id/menu_button_open">

                <CustomAttribute app:attributeName="imageAlpha"
                    app:customIntegerValue="255"/>

            </KeyAttribute>

            <KeyAttribute app:framePosition="60"
                app:target="@id/menu_button_open">

                <CustomAttribute app:attributeName="imageAlpha"
                    app:customIntegerValue="0"/>

            </KeyAttribute>



            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:percentY="-0.2"
                app:target="@id/menu_button_open" />
        </KeyFrameSet>


    </Transition>

    <ConstraintSet android:id="@+id/closed">

        <Constraint
            android:id="@id/menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0"
            android:scaleY="0"
            app:layout_constraintBottom_toBottomOf="@+id/menu_button"
            app:layout_constraintEnd_toEndOf="@+id/menu_button"
            app:layout_constraintStart_toStartOf="@+id/menu_button"
            app:layout_constraintTop_toTopOf="@+id/menu_button">


        </Constraint>

        <Constraint
            android:id="@id/menu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0"
            android:scaleY="0"
            app:layout_constraintBottom_toBottomOf="@+id/menu_button"
            app:layout_constraintEnd_toEndOf="@+id/menu_button"
            app:layout_constraintStart_toStartOf="@+id/menu_button"
            app:layout_constraintTop_toTopOf="@+id/menu_button">


        </Constraint>

        <Constraint
            android:id="@id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:scaleX="0"
            android:scaleY="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </Constraint>



        <Constraint android:id="@id/menu_button_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >


        </Constraint>


        <Constraint android:id="@id/backgroud_color"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



    </ConstraintSet>


    <ConstraintSet android:id="@+id/open">

        <Constraint
            android:id="@id/menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintStart_toEndOf="@+id/menu_button"
            app:layout_constraintTop_toBottomOf="@+id/menu_button">


        </Constraint>

        <Constraint
            android:id="@id/menu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scaleX="1"
            android:scaleY="1"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/menu_button"
            app:layout_constraintTop_toBottomOf="@+id/menu1">


        </Constraint>

        <Constraint
            android:id="@id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_dehaze"
            app:altSrc="@drawable/ic_close"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </Constraint>


        <Constraint android:id="@id/menu_button_open"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_dehaze"
            app:layout_constraintStart_toEndOf="@+id/menu_button"
            app:layout_constraintTop_toBottomOf="@+id/menu_button" >

            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0" />

        </Constraint>


        <Constraint android:id="@id/backgroud_color"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/menu_button_open"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </ConstraintSet>


</MotionScene>